{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    // https://docs.renovatebot.com/presets-group/#grouplinters
    "group:linters",
    // https://docs.renovatebot.com/presets-default/#separatemultiplemajorreleases
    ":separateMultipleMajorReleases",
    // https://docs.renovatebot.com/presets-default/#ignoreunstable
    ":ignoreUnstable",
    // https://docs.renovatebot.com/presets-default/#semanticcommits
    ":semanticCommits",
    // https://docs.renovatebot.com/presets-default/#semanticprefixfixdepschoreothers
    ":semanticPrefixFixDepsChoreOthers",
    ":timezone(Asia/Tokyo)"
  ],
  "schedule": [
    "after 10:00 before 23:00"
  ],

  // ["auto", "pin", "bump", "replace", "widen", "update-lockfile", "in-range-only"]
  // "rangeStrategy": "pin",

  // Dependency Dashboard
  "dependencyDashboardLabels": ["renovate"],

  // PR Settings
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "prCreation": "not-pending",
  "configMigration": true,
  "rollbackPrs": true,
  "addLabels": ["renovate"],

  // Vulnerability Alerts
  "vulnerabilityAlerts": {
    "enabled": true,
    "addLabels": ["security"]
  },
  "osvVulnerabilityAlerts": true,

  // Update Schedule
  "major": { "minimumReleaseAge": "7 days" },
  "minor": { "minimumReleaseAge": "3 days" },
  "patch": { "minimumReleaseAge": "2 days" },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      // By default, Renovate will not automerge until it sees passing status checks / check runs for the branch. 
      // "ignoreTests": true
    }
  ],
}
