{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchDepTypes": ["action"],
      "matchPackageNames": ["!actions/{/,}**"],
      "pinDigests": true
    },
    {
      "matchDepTypes": ["action"],
      "matchUpdateTypes": ["pin"],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
