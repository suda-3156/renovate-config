// https://docs.renovatebot.com/docker/
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    // https://docs.renovatebot.com/presets-docker/#dockerpindigests
    "docker:pinDigests",
    // `{ "pinDigests": true }` targeting Docker images and GitHub Actions.
    // https://docs.renovatebot.com/configuration-options/#pindigests
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        // `Dockerfile-xxx`, `Dockerfile.xxx`, `dockerfile-xxx` or `dockerfile.xxx`
        "(^|/)[Dd]ockerfile[-.][^/]*$",
        // `xxx-Dockerfile`, `xxx.Dockerfile`, `xxx-dockerfile` or `xxx.dockerfile`
        "(^|/)[^/]*[-.][Dd]ockerfile$",
      ],
      "matchStrings": [
        "FROM\\s+(?<depName>[^\\s:@]+)(?::(?<currentValue>[^@\\s]+))?(?:@(?<currentDigest>sha256:[a-f0-9]+))?"
      ],
      "datasourceTemplate": "docker"
    }
  ],
}
